<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CiderTogether.Views.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About Cider Together">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/> <!-- Title bar -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" VerticalAlignment="Stretch">
            <TextBlock Text="About"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       Style="{StaticResource CaptionTextBlockStyle}"/>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Padding="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Spacing="20" HorizontalAlignment="Center">
                    <!-- App Icon -->
                    <Border Width="96"
                            Height="96"
                            CornerRadius="20"
                            HorizontalAlignment="Center">
                        <Border.Background>
                            <ImageBrush x:Name="AppIconBrush" Stretch="UniformToFill"/>
                        </Border.Background>
                        <!-- Fallback icon if image fails -->
                        <FontIcon x:Name="FallbackIcon"
                                  Glyph="&#xE8D6;"
                                  FontSize="42"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <!-- App Name & Version -->
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <TextBlock Text="Cider Together"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="VersionText"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Divider -->
                    <Border Height="1"
                            Width="200"
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                    <!-- Credits -->
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <!-- Created by -->
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <TextBlock Text="Created by"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Giorgio Brullo"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <HyperlinkButton Content="@giorgiobrullo"
                                             NavigateUri="https://github.com/giorgiobrullo"
                                             HorizontalAlignment="Center"
                                             Padding="0"/>
                        </StackPanel>

                        <!-- Built on -->
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <TextBlock Text="Built on"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <HyperlinkButton Content="Cider"
                                             NavigateUri="https://cider.sh"
                                             HorizontalAlignment="Center"
                                             Padding="0"
                                             FontWeight="SemiBold"/>
                            <TextBlock Text="by the Cider Collective"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Description -->
                    <TextBlock Text="Listen to music together with friends."
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>

                    <!-- Divider -->
                    <Border Height="1"
                            Width="200"
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                    <!-- GitHub link -->
                    <HyperlinkButton NavigateUri="https://github.com/giorgiobrullo/cider-listen-together"
                                     HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE71B;" FontSize="14"/>
                            <TextBlock Text="GitHub" FontSize="12"/>
                        </StackPanel>
                    </HyperlinkButton>

                    <!-- Copyright -->
                    <TextBlock Text="Â© 2025 Giorgio Brullo"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="11"
                               Opacity="0.7"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>

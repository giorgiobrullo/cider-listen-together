<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CiderTogether.Views.JoiningView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Creating Room State -->
        <StackPanel x:Name="CreatingPanel"
                    Spacing="16"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <ProgressRing IsActive="True" Width="48" Height="48"/>
            <TextBlock Text="Creating room..."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Searching State -->
        <StackPanel x:Name="SearchingPanel"
                    Spacing="20"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <ProgressRing IsActive="True" Width="48" Height="48"/>

            <StackPanel Spacing="6" HorizontalAlignment="Center">
                <TextBlock Text="Looking for room..."
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="RoomCodeText"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontFamily="Consolas"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Connecting to peers..."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Content="Cancel"
                    HorizontalAlignment="Center"
                    Click="Cancel_Click"/>
        </StackPanel>

        <!-- Connecting State -->
        <StackPanel x:Name="ConnectingPanel"
                    Spacing="16"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <ProgressRing IsActive="True" Width="48" Height="48"/>

            <StackPanel Spacing="6" HorizontalAlignment="Center">
                <TextBlock Text="Connecting..."
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Found host, syncing room state"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Timeout State -->
        <StackPanel x:Name="TimeoutPanel"
                    Spacing="20"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <FontIcon Glyph="&#xE8FA;"
                      FontSize="48"
                      Foreground="{ThemeResource SystemFillColorCautionBrush}"
                      HorizontalAlignment="Center"/>

            <StackPanel Spacing="6" HorizontalAlignment="Center">
                <TextBlock Text="Room Not Found"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="TimeoutRoomCodeText"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="The room code may be incorrect, or the host is no longer available."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="260"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center">
                <Button Content="Go Back"
                        Click="GoBack_Click"/>
                <Button Content="Retry"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="Retry_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
